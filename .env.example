# Airflow Configuration
AIRFLOW_UID=50000
AIRFLOW__CORE__EXECUTOR=LocalExecutor
AIRFLOW__CORE__LOAD_EXAMPLES=false

# PostgreSQL Configuration
POSTGRES_USER=airflow
POSTGRES_PASSWORD=airflow
POSTGRES_DB=airflow

# Jobs Database Configuration
JOBS_DB_HOST=postgres
JOBS_DB_PORT=5432
JOBS_DB_NAME=jobs_db
JOBS_DB_USER=airflow
JOBS_DB_PASSWORD=airflow

# Spark Configuration
SPARK_MASTER_URL=spark://spark-master:7077
SPARK_WORKER_MEMORY=2G
SPARK_WORKER_CORES=2

# Scraping Configuration
SCRAPING_DELAY_MIN=2
SCRAPING_DELAY_MAX=5
MAX_JOBS_PER_RUN=500

# Data Paths (inside containers)
DATA_RAW_PATH=/opt/airflow/data/raw
DATA_PROCESSED_PATH=/opt/airflow/data/processed
DATA_ANALYTICS_PATH=/opt/airflow/data/analytics

# Project Directory (for docker-compose)
AIRFLOW_PROJ_DIR=.
